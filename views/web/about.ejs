<% layout('layouts/web.ejs') -%>

    <div class="hero">
        <h1><i class="fa fa-info-circle"></i> <%= title %></h1>
        <p class="subtitle">Información sobre esta aplicación de ejemplo</p>
    </div>

    <div class="content">
        <div class="about-section">
            <h2><i class="fa fa-cogs"></i> Tecnologías utilizadas</h2>
            <p><%= description %></p>
            
            <div class="tech-details">
                <h3><i class="fa fa-list"></i> Stack tecnológico:</h3>
                <ul>
                    <li><strong>Backend:</strong> Node.js con Express</li>
                    <li><strong>Frontend:</strong> HTML5, CSS3, JavaScript</li>
                    <li><strong>Templating:</strong> EJS (Embedded JavaScript)</li>
                    <li><strong>Estilos:</strong> CSS personalizado con Flexbox</li>
                    <li><strong>Iconos:</strong> Font Awesome</li>
                    <li><strong>Fuentes:</strong> Google Fonts (Poppins)</li>
                </ul>
            </div>

            <div class="project-structure">
                <h3><i class="fa fa-folder-open"></i> Estructura del proyecto:</h3>
                <pre>
hola-mundo-express/
├── server.js          # Punto de entrada de la aplicación
├── package.json       # Dependencias y metadatos
├── public/            # Archivos estáticos
│   ├── css/
│   └── images/
└── views/             # Plantillas EJS
    ├── index.ejs
    └── partials/
        ├── header.ejs
        └── footer.ejs
                </pre>
            </div>

            <div class="action-buttons">
                <a href="/" class="btn btn-primary">
                    <i class="fa fa-arrow-left"></i> Volver al inicio
                </a>
                <a href="https://expressjs.com/" target="_blank" class="btn btn-secondary">
                    <i class="fa fa-external-link-alt"></i> Documentación de Express
                </a>
            </div>
        </div>
    </div>
